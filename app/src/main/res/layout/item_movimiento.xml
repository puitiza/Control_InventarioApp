<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:gravity="center_vertical"
    android:padding="12dp">

    <TextView
        android:id="@+id/tvFechaHoraMovimiento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="17 FEB. 2018"
        android:textAlignment="center"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="#000"
        android:layout_marginEnd="12dp"
        />

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/civImagenProducto"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:civ_border_color="#e4e4e4"
        app:civ_border_width="0dp"
        android:layout_marginEnd="10dp"/>

    <TextView
        android:id="@+id/tvDescripcionProducto"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="Lipton peach flavor 400ml"
        android:textColor="#000"
        android:textSize="16sp"
        android:layout_marginEnd="5dp"/>

    <LinearLayout
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:text="- 51"
            android:id="@+id/tvCantidadMovimiento"
            android:textColor="@color/red"
            android:textSize="20sp"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvUnidadesMovimiento"
            android:textSize="6sp"
            android:textAlignment="center"
            android:text="UNIDAD(ES)"
            android:textColor="@color/red"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>